<% include ./partials/header %>
<div class="container">
    <div class="row">
        <form id="borderedContainer" class="col-md-6 col-md-offset-3" action="/foodRecipes" method="POST">
            <h1 class="text-center">New Recipe</h1>
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" class="form-control" name="recipe[title]" placeholder="Title">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="text" id="image" class="form-control" name="recipe[image]" placeholder="Image">
            </div>
            <div class="form-group">
                <label for="shortDesc">Short Description</label>
                <input type="text" id="shortDesc" class="form-control" name="recipe[shortDesc]" placeholder="Short Description">
            </div>
            <div class="form-group">
                <label for="recipe">Recipe</label>
                <textarea id="recipe" class="form-control" name="recipe[recipe]" rows="7">Recipe</textarea>
            </div>
            <button class="btn btn-primary">Submit</button>   
        </form>
    </div>
</div>
<% include ./partials/footer %>